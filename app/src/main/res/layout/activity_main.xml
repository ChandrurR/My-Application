<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:layout_marginBottom="1pt"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/Yellow"
        android:gravity="center|right"
        android:textSize="40pt"
        android:inputType="textPersonName"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buAC"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/green"
                />


        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu7"
                android:text="7"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu9"
                android:onClick="numberevent"
                android:text="9"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bupercent"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />


        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu4"
                android:text="4"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu5"
                android:text="5"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu6"
                android:text="6"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/buPlus"
                android:text="+"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />


        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu1"
                android:text="1"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu2"
                android:text="2"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:onClick="numberevent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/pink"
                />


        </TableRow>



    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:text="0"
            android:onClick="numberevent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_weight="2"
            android:layout_width="46pt"
            android:background="@color/pink"
            />
        <Button
            android:id="@+id/buDot"
            android:text="."
            android:onClick="numberevent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:layout_width="46pt"
            android:background="@color/pink"
            />
        <Button
            android:id="@+id/buEquals"
            android:text="="
            android:onClick="equalEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:layout_width="46pt"
            android:background="@color/pink"
            />

    </LinearLayout>


</LinearLayout>

